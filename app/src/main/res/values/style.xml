<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="JkostTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#fafafa</item>
        <item name="colorAccent">#333333</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="title_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="MyParentLayout">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="FontCard">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="OutlinedBoxEt" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item> <!-- Radius for top-left corner -->
        <item name="boxCornerRadiusTopEnd">8dp</item> <!-- Radius for top-right corner -->
        <item name="boxCornerRadiusBottomStart">8dp</item> <!-- Radius for bottom-left corner -->
        <item name="boxCornerRadiusBottomEnd">8dp</item> <!-- Radius for bottom-right corner -->
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item> <!-- background pop-up dialog -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

</resources>