<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="JkostTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryDark">#fafafa</item>
        <item name="colorAccent">#333333</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="title_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="MyParentLayout">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="FontCard">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="etVerif">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">4</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="etLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/disableColor</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>