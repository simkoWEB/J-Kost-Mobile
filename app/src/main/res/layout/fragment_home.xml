<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    style="@style/MyParentLayout">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/titleHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        style="@style/title_text"/>
    <LinearLayout
        android:id="@+id/container_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/titleHome">

        <ImageView
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:src="@drawable/pp"
         android:background="@drawable/rounded_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_gravity="center"
        >


    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muhammad Lutfi Hakim"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        />

        <TextView
            android:id="@+id/kost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kost Mentari Indah"
            android:textColor="@color/black"
            android:textSize="10dp" />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_pembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_profile"
        android:orientation="vertical"
        android:background="@drawable/rounded_home_card"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

     <TextView
         android:id="@+id/totalpembayaran"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Total Pembayaran"
         android:textSize="17dp"
         android:textColor="@color/white"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1"
          >
       <TextView
           android:id="@+id/bulanpembayaran"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="November"
           android:textSize="12dp"
           android:layout_weight="1"
           android:textColor="@color/white"
           android:layout_marginTop="26dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Rp.800.000"
              android:textSize="22dp"
              android:textStyle="bold"
              android:textColor="@color/white" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="Lunas"
            android:textSize="9dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_green"
            android:layout_marginTop="20dp"
            android:paddingVertical="5dp"
            />
      </LinearLayout>
      </LinearLayout>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/scrollview_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/container_pembayaran">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/kumpulan_card_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
</RelativeLayout>
