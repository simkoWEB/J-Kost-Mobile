<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card_full"
        android:elevation="2dp">

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:id="@+id/bulanCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OKT"
                android:textSize="12dp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/rounded_green_card"
                android:textColor="#F6F6F6"
                android:gravity="center"
                android:contentDescription="Bulan Oktober"/>

            <TextView
                android:id="@+id/tglCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="18dp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp"
                android:background="@drawable/rounded_white_card"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembayaran Bulan"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_regular"
                android:contentDescription="Bulan Oktober"/>

            <TextView
                android:id="@+id/judulhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oktober"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_regular"
                android:contentDescription="Bulan Oktober"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp."
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/hargaBulanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="800,000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginRight="8dp"
            android:layout_marginVertical="8dp"
            >

            <TextView
                android:id="@+id/idTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TR001"
                android:textSize="11dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tanggalTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023-11-30"
                android:textSize="11dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:layout_gravity="end"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>