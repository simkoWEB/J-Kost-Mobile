<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    >
    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingVertical="8dp"
        android:background="@drawable/rounded_card_full"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="8dp"
        android:elevation="2dp">
        <LinearLayout
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:id="@+id/bulanCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12dp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/rounded_green_card"
                android:textColor="#F6F6F6"
                android:gravity="center"
                android:contentDescription="Bulan Oktober"/>
            <TextView
                android:id="@+id/tglCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18dp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp"
                android:background="@drawable/rounded_white_card"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/judulhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:contentDescription="Bulan Oktober"/>

            <TextView
                android:id="@+id/tanggalTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="11dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:layout_gravity="start"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/idTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="11dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:layout_gravity="end"
                />

            <TextView
                android:id="@+id/hargaBulanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginHorizontal="8dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="end"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>